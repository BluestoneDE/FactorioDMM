<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            style="-fx-background-color: #444;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="factorio.gui.BitGIFGeneratorController">
    <GridPane hgap="10.0" vgap="5.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
              AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="5.0">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" maxWidth="290" minWidth="145"/>
            <ColumnConstraints hgrow="ALWAYS" prefWidth="290.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints prefHeight="35.0"/>
            <RowConstraints prefHeight="40.0"/>
            <RowConstraints prefHeight="45" vgrow="ALWAYS"/>
            <RowConstraints prefHeight="30"/>
            <RowConstraints prefHeight="30"/>
            <RowConstraints prefHeight="30"/>
            <RowConstraints prefHeight="30"/>
            <RowConstraints prefHeight="40.0"/>
        </rowConstraints>
        <Label alignment="CENTER" contentDisplay="RIGHT" text="Factorio Display Math Machine" textFill="WHITE"
               GridPane.columnSpan="2147483647" GridPane.halignment="CENTER">
            <font>
                <Font name="Comic Sans MS Bold" size="24.0"/>
            </font>
            <graphic>
                <Label text="v1.1" textFill="WHITE">
                    <font>
                        <Font name="Comic Sans MS Bold" size="16.0"/>
                    </font>
                </Label>
            </graphic>
            <GridPane.margin>
                <Insets left="-10.0" right="-10.0"/>
            </GridPane.margin>
        </Label>
        <TextArea fx:id="previewTextArea" editable="false" maxHeight="1.7976931348623157E308"
                  maxWidth="1.7976931348623157E308" nodeOrientation="LEFT_TO_RIGHT" onMouseClicked="#selectAll"
                  onScroll="#zoom" style="-fx-control-inner-background: #111;" GridPane.columnIndex="1"
                  GridPane.rowIndex="1" GridPane.rowSpan="7">
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
            <font>
                <Font name="Comic Sans MS Bold" size="9.0"/>
            </font>
        </TextArea>
        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                onAction="#open" text="open files" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
            <font>
                <Font name="Comic Sans MS Bold" size="16.0"/>
            </font>
        </Button>
        <ListView fx:id="pictureListView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                  nodeOrientation="RIGHT_TO_LEFT"
                  style="-fx-control-inner-background: #111; -fx-font: 13px 'Comic Sans MS Bold';"
                  GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
        </ListView>
        <Label fx:id="previewWidth" text="Width" textFill="WHITE" GridPane.rowIndex="3">
            <font>
                <Font name="Comic Sans MS Bold" size="18.0"/>
            </font>
        </Label>
        <Label fx:id="previewHeight" text="Height" textFill="WHITE" GridPane.rowIndex="4">
            <font>
                <Font name="Comic Sans MS Bold" size="18.0"/>
            </font>
        </Label>
        <CheckBox fx:id="substationsCheckbox" disable="true" mnemonicParsing="false" selected="true" text="Substations"
                  textFill="WHITE" GridPane.rowIndex="5">
            <font>
                <Font name="Comic Sans MS Bold" size="18.0"/>
            </font>
        </CheckBox>
        <Slider fx:id="brightnessSlider" blockIncrement="1.0" disable="true" majorTickUnit="0.25" max="1.0"
                maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minorTickCount="4"
                onMouseDragged="#updatePreview" showTickMarks="true" value="0.5" GridPane.rowIndex="6">
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
        </Slider>
        <Button fx:id="mathButton" disable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                mnemonicParsing="false" onAction="#math" text="do math" GridPane.rowIndex="7">
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
            <font>
                <Font name="Comic Sans MS Bold" size="16.0"/>
            </font>
        </Button>
    </GridPane>
</AnchorPane>
