<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            style="-fx-background-color: #444;" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="factorio.Controller">
    <children>
        <Label alignment="CENTER" text="Factorio Display Math Machine" textFill="WHITE" AnchorPane.leftAnchor="10.0"
               AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="5.0">
            <font>
                <Font name="Comic Sans MS Bold" size="24.0"/>
            </font>
        </Label>
        <GridPane AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
                  AnchorPane.topAnchor="45.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="240" minWidth="120"/>
                <ColumnConstraints hgrow="SOMETIMES"/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="40.0"/>
                <RowConstraints prefHeight="45" vgrow="ALWAYS"/>
                <RowConstraints prefHeight="30"/>
                <RowConstraints prefHeight="30"/>
                <RowConstraints prefHeight="30"/>
                <RowConstraints prefHeight="40.0"/>
            </rowConstraints>
            <children>
                <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        onAction="#open" text="open files">
                    <GridPane.margin>
                        <Insets bottom="5.0" right="5.0"/>
                    </GridPane.margin>
                    <font>
                        <Font name="Comic Sans MS Bold" size="16.0"/>
                    </font>
                </Button>
                <ListView fx:id="pictureListView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                          nodeOrientation="RIGHT_TO_LEFT" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets bottom="5.0" right="5.0" top="5.0"/>
                    </GridPane.margin>
                </ListView>
                <Label fx:id="previewWidth" text="Width" textFill="WHITE" GridPane.rowIndex="2">
                    <font>
                        <Font name="Comic Sans MS Bold" size="18.0"/>
                    </font>
                </Label>
                <Label fx:id="previewHeight" text="Height" textFill="WHITE" GridPane.rowIndex="3">
                    <font>
                        <Font name="Comic Sans MS Bold" size="18.0"/>
                    </font>
                </Label>
                <TextArea fx:id="previewTextArea" editable="false" maxHeight="1.7976931348623157E308"
                          maxWidth="1.7976931348623157E308" nodeOrientation="LEFT_TO_RIGHT" onMouseClicked="#selectAll"
                          GridPane.columnIndex="1" GridPane.rowSpan="6">
                    <GridPane.margin>
                        <Insets left="5.0"/>
                    </GridPane.margin>
                    <font>
                        <Font name="Comic Sans MS Bold" size="9.0"/>
                    </font>
                </TextArea>
                <Slider fx:id="brightnessSlider" blockIncrement="1.0" disable="true" majorTickUnit="0.25" max="1.0"
                        maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minorTickCount="4"
                        onMouseDragged="#updatePreview" showTickMarks="true" value="0.5" GridPane.rowIndex="4">
                    <GridPane.margin>
                        <Insets right="5.0"/>
                    </GridPane.margin>
                </Slider>
                <Button fx:id="mathButton" disable="true" maxHeight="1.7976931348623157E308"
                        maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#math" text="do math"
                        GridPane.rowIndex="5">
                    <GridPane.margin>
                        <Insets right="5.0" top="5.0"/>
                    </GridPane.margin>
                    <font>
                        <Font name="Comic Sans MS Bold" size="16.0"/>
                    </font>
                </Button>
            </children>
        </GridPane>
    </children>
</AnchorPane>
